{
  "incremental": true,
  "typescript": {
    "indentWidth": 2,
    "lineWidth": 100,
    "quoteStyle": "preferSingle",
    "jsx.quoteStyle": "preferDouble",
    "preferSingleLine": true,
    "arrowFunction.useParentheses": "preferNone",
    "jsx.multiLineParens": "always",
    "memberExpression.preferSingleLine": "false",
    "memberExpression.linePerExpression": "true",
    "typeLiteral.separatorKind": "comma",
    "jsxElement.spaceBeforeSelfClosingTagSlash": false
  },
  "json": {
  },
  "includes": ["**/*.{ts,tsx,js,jsx,cjs,mjs,json}"],
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    "src/zapatos"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.65.1.wasm",
    "https://plugins.dprint.dev/json-0.14.1.wasm"
  ]
}
