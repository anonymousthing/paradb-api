{
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2018",
      "es2019",
      "es2020",
      "esnext"
    ],
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "baseUrl": "src",
    "target": "es2022",
    "module": "es2022",
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true
  },
  "ts-node": {
    "compilerOptions": {
      "target": "es2017",
      "module": "node16"
    },
    "require": [
      "tsconfig-paths/register"
    ],
    "files": true
  },
  "include": [
    "src",
    "build"
  ]
}
